<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XMLParser.Views.StartingPage"
             BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1C1C1E}"
             Padding="30">

    <Grid RowDefinitions="Auto,*,Auto"
          ColumnDefinitions="2*,3*,3*"
          ColumnSpacing="25"
          RowSpacing="25">

        <VerticalStackLayout Grid.Column="0" Spacing="20" VerticalOptions="Start">

            <Label Text="Google Drive"
                   FontAttributes="Bold"
                   FontSize="22"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />

            <Label x:Name="UserEmailLabel"
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />

            <Button x:Name="AuthorizeButton"
                    Text="Увійти"
                    BackgroundColor="#7C3AED"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="45"
                    Clicked="OnAuthorizeClicked" />

            <Button x:Name="LogoutButton"
                    Text="Вийти"
                    BackgroundColor="#7C3AED"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="45"
                    IsVisible="False"
                    Clicked="OnLogoutClicked" />

            <ActivityIndicator x:Name="LoadingIndicator"
                               IsVisible="False"
                               IsRunning="False"
                               Color="#7C3AED"
                               HorizontalOptions="Center"
                               VerticalOptions="CenterAndExpand" />

        </VerticalStackLayout>

        <VerticalStackLayout Grid.Column="1" Spacing="20">

            <Border BackgroundColor="{AppThemeBinding Light=#F5F3FA, Dark=#2C2C2E}"
                   Padding="20">
                <VerticalStackLayout Spacing="10">

                    <Label Text="XML-файл"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />

                    <HorizontalStackLayout Spacing="12">
                        <Button x:Name="XmlLocalButton"
                                Text="Локально"
                                BackgroundColor="#7C3AED"
                                TextColor="White"
                                Opacity="1"
                                CornerRadius="8"
                                Clicked="OnXmlLocalClicked" />

                        <Button x:Name="XmlDriveButton"
                                Text="Drive"
                                BackgroundColor="#7C3AED"
                                TextColor="White"
                                Opacity="0.5"
                                CornerRadius="8"
                                Clicked="OnXmlDriveClicked" />
                    </HorizontalStackLayout>

                    <Button x:Name="PickXmlButton"
                            Text="Обрати XML"
                            BackgroundColor="#7C3AED"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45"
                            Clicked="OnPickXmlClicked" />

                    <Label x:Name="XmlSelectedLabel"
                           Text="Файл не обрано"
                           FontSize="13"
                           TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />

                    <VerticalStackLayout x:Name="XmlRecentContainer"
                                         Spacing="5"
                                         Padding="5,5,0,0" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Column="2" Spacing="20">

            <Border BackgroundColor="{AppThemeBinding Light=#F5F3FA, Dark=#2C2C2E}"
                   Padding="20">
                <VerticalStackLayout Spacing="10">

                    <Label Text="XSL-файл"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />

                    <HorizontalStackLayout Spacing="12">
                        <Button x:Name="XslLocalButton"
                                Text="Локально"
                                BackgroundColor="#7C3AED"
                                TextColor="White"
                                Opacity="1"
                                CornerRadius="8"
                                Clicked="OnXslLocalClicked" />

                        <Button x:Name="XslDriveButton"
                                Text="Drive"
                                BackgroundColor="#7C3AED"
                                TextColor="White"
                                Opacity="0.5"
                                CornerRadius="8"
                                Clicked="OnXslDriveClicked" />
                    </HorizontalStackLayout>

                    <Button x:Name="PickXslButton"
                            Text="Обрати XSL"
                            BackgroundColor="#7C3AED"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45"
                            Clicked="OnPickXslClicked" />

                    <Label x:Name="XslSelectedLabel"
                           Text="Файл не обрано"
                           FontSize="13"
                           TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />

                    <VerticalStackLayout x:Name="XslRecentContainer"
                                         Spacing="5"
                                         Padding="5,5,0,0" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>

        <HorizontalStackLayout Grid.Row="2"
                       Grid.ColumnSpan="3"
                       HorizontalOptions="Center"
                       Spacing="40"
                       Padding="0,30,0,0">

            <Button x:Name="ContinueButton"
                    Text="Продовжити"
                    BackgroundColor="#7C3AED"
                    TextColor="White"
                    CornerRadius="15"
                    FontSize="18"
                    HeightRequest="60"
                    WidthRequest="220"
                    IsEnabled="False"
                    Clicked="OnContinueClicked" />

            <Button x:Name="ClearHistoryButton"
                    Text="Очистити історію"
                    BackgroundColor="#7C3AED"
                    TextColor="White"
                    CornerRadius="15"
                    FontSize="18"
                    HeightRequest="60"
                    WidthRequest="220"
                    Clicked="OnClearHistoryClicked" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
